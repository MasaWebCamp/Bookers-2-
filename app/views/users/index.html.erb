<h2>New Book</h2>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

<h2>Books</h2>
<table>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to _path(post_image.id) do %>
          <%= image_tag user.get_profile_image %>
          <% end %>
        </td>
        <td><%= user.name %></td>

      </tr>
      <% end %>
    </tbody>
  </table>
