<h2>User info</h2>
<%= render 'layouts/error', model: @user %>

<%= form_with model: @user do |f| %>
  <h4>Name</h4>
    <%= f.text_field :name %>
  <h4>Image</h4>
    <%= f.file_field :profile_image, accept: "profile_image/*" %>
  <h4>Introduction</h4>
    <%= f.text_area :introduction %>
  <%= f.submit 'Update User' %>
<% end %>