<h1>Editing Book</h1>

<%= render 'layouts/error', model: @book %>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>
  <h4>Opinion</h4>
    <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>

<div>
  <%= link_to "show", book_path(@book) %>
  |
  <%= link_to "Back", books_path %>
</div>